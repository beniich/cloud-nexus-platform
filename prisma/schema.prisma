// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("client") // client, seller, admin, owner
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teamId    String?
  team      Team?    @relation(fields: [teamId], references: [id])
  
  createdDroplets Droplet[]
  invitations     Invitation[]
}

model Team {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users       User[]
  droplets    Droplet[]
  databases   Database[]
  domains     Domain[]
  invoices    Invoice[]
  invitations Invitation[]
  backups     Backup[]
}

model Droplet {
  id          String   @id @default(uuid())
  name        String
  region      String
  size        String
  image       String
  status      String   // starting, running, stopped, rebooting
  ipAddress   String
  monthlyCost Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  createdBy   String
  creator     User     @relation(fields: [createdBy], references: [id])

  metrics     DropletMetric[]
  snapshots   Snapshot[]
}

model DropletMetric {
  id          String   @id @default(uuid())
  cpuUsage    Float
  ramUsage    Float
  diskUsage   Float
  networkIn   Float
  networkOut  Float
  timestamp   DateTime @default(now())

  dropletId   String
  droplet     Droplet  @relation(fields: [dropletId], references: [id], onDelete: Cascade)
}

model Domain {
  id        String   @id @default(uuid())
  name      String
  status    String   // active, pending
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teamId    String
  team      Team     @relation(fields: [teamId], references: [id])
  
  records   DNSRecord[]
}

model DNSRecord {
  id        String   @id @default(uuid())
  type      String   // A, CNAME, MX, TXT, etc.
  name      String
  value     String
  ttl       Int      @default(3600)

  domainId  String
  domain    Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
}

model Invoice {
  id              String   @id @default(uuid())
  amount          Float
  status          String   // paid, open, past_due
  stripeInvoiceId String?
  createdAt       DateTime @default(now())

  teamId          String
  team            Team     @relation(fields: [teamId], references: [id])
}

model Invitation {
  id        String   @id @default(uuid())
  email     String
  role      String
  token     String   @unique
  acceptedAt DateTime?
  createdAt DateTime @default(now())

  teamId    String
  team      Team     @relation(fields: [teamId], references: [id])
  invitedBy String
  inviter   User     @relation(fields: [invitedBy], references: [id])
}

model ActivityLog {
  id         String   @id @default(uuid())
  action     String   // EMAIL_SENT, DROPLET_CREATED, SNAPSHOT_CREATED, etc.
  entityType String   // EMAIL, DROPLET, SNAPSHOT, BACKUP, etc.
  entityId   String
  metadata   Json?
  createdAt  DateTime @default(now())

  teamId     String?
  userId     String?
}

model Snapshot {
  id          String   @id @default(uuid())
  name        String
  size        Float    // GB
  status      String   @default("pending") // pending, completed, failed
  monthlyCost Float
  createdAt   DateTime @default(now())

  dropletId   String
  droplet     Droplet  @relation(fields: [dropletId], references: [id], onDelete: Cascade)
}

model Backup {
  id        String   @id @default(uuid())
  type      String   // database, droplets, full
  size      Float    // MB
  status    String   @default("pending") // pending, completed, failed
  metadata  Json?
  createdAt DateTime @default(now())

  teamId    String
  team      Team     @relation(fields: [teamId], references: [id])
}

model Database {
  id          String   @id @default(uuid())
  name        String
  engine      String   // postgresql, mysql, mongodb, redis
  version     String
  region      String
  status      String   @default("pending") // pending, running, stopped
  monthlyCost Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
}

